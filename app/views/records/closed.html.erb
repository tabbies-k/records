<h1>終了一覧</h1>

<table class="table">
  <thead>
    <tr>
      <th>担当者</th>
      <th>候補者</th>
      <th>企業</th>
      <th>ステータス</th>
      <th>見込売上</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.user.name %></td>
        <td><%= record.candidate %></td>
        <td>
          <% record.entries.each do |entry| %>
            <%= link_to entry.client, edit_entry_path(entry) %>
          <% end %>  
        </td>
        <td><%= record.status %></td>
        <td>
            <% record.entries.each do |entry| %>
              <%= link_to entry.expected_sales, edit_entry_path(entry) %>万円
            <% end %>  
        </td>
        <td><%=  %></td>
        <td><%= link_to '編集', edit_record_path(record) %></td>
        <td><%= link_to '削除', record, data: { confirm: '削除しますか?' }, method: :delete %></td>        
      </tr>
    <% end %>
  </tbody>
</table>
