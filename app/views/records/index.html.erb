<p id="notice"><%= notice %></p>

<h1>商談一覧</h1>

<table class="table">
  <thead>
    <tr>
      <th>候補者</th>
      <th>企業名</th>
      <th>ステータス</th>
      <th>売上</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.candidate %></td>
        <td><%= record.client %></td>
        <td><%= record.status %></td>
        <td><%= record.sales %></td>
        <td><%= link_to '詳細', record %></td>
        <td><%= link_to '編集', edit_record_path(record) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

